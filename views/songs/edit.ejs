<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/songs/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form 
    id="new-form" 
    action="/songs/<%= song._id %>?_method=PUT" 
    method="POST"
  >
    <label for="title-input">Title:</label>
    <input type="text" name="title" value="<%= song.title %>" id="title-input">
    
    <label for="artist-input">Artist:</label>
    <input type="text" name="artist" value="<%= song.artist %>" id="artist-input">
   
    <label for="album-select">Album:</label>
    <input type="text" name="album" value="<%= song.album %>" id="album-input">

    <label for="year-select">Year:</label>
    <input type="text" name="year" value="<%= song.year %>" id="year-input">

    <label for="genre-select">Genre:</label>
    <select name="genre" id="genre-select" >
      <option value="<%= song.genre %>"><%= song.genre %></option>
      <option value="Pop">Pop</option>
      <option value="Alternative">Alternative</option>
      <option value="Rock">Rock</option>
      <option value="Rap">Rap</option>
      <option value="Country">Country</option>
      <option value="Dance">Dance</option>
    </select>
    <button type="submit">Save Song</button>
  </form>
</main>

<%- include("../partials/footer") %>