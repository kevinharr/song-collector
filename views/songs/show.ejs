<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/songs/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Song: </div>
    <div><%= song.title %></div>
    <div>Artist: </div>
    <div><%= song.artist %></div>
    <div>Album: </div>
    <div><%= song.album %></div>
    <div>Genre: </div>
    <div><%= song.genre %></div>
    <br>
    <div>Tour Locations:</div>
    <ul>
        <% song.tour.forEach(tourLocation => { %>
          <li><% tourLocation.name %></li>      
       <% }) %>
    </ul>
  </section>

  <form id="add-venue" action="/songs/<%= song._id %>/venues" method="POST">
    
    <label for=date-input">Date:</label>
    <input type="text" name="date" id="date-input">

    <label for=start-input">Start:</label>
    <input type="text" name="start" id="start-input">

    <select name="venueId">
        <% venues.forEach(venue => { %>
        <option value="<% venue._id %>"><%=venue.name %></option>"
        <% }) %>
    </select>
    <button type="submit">Add Venue</button>
  </form>
</main>
  
<%- include('../partials/footer') %>